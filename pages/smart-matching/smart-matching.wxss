/* pages/smart-matching/smart-matching.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f7fa;
}

/* 顶部标题 */
.chat-header {
  background: white;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 10;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-top: 6rpx;
}

/* 消息列表 */
.chat-messages {
  flex: 1;
  overflow-y: auto;
  box-sizing: border-box;
}

.message-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message {
  display: flex;
  gap: 16rpx;
  max-width: 88%;
}

.user-message {
  align-self: flex-end;
  flex-direction: row-reverse;
}

.ai-message {
  align-self: flex-start;
}

/* 头像 */
.message-avatar {
  width: 72rpx;
  height: 72rpx;
  flex-shrink: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.ai-avatar {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 26rpx;
}

/* 消息气泡 */
.message-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.message-bubble {
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  background: white;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.05);
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-all;
  white-space: pre-wrap; /* Preserve newlines */
}

.user-message .message-bubble {
  background: #667eea;
  color: white;
  border-bottom-right-radius: 4rpx;
}

.ai-message .message-bubble {
  background: white;
  color: #2c3e50;
  border-bottom-left-radius: 4rpx;
}

/* 格式化文本样式 */
.bold-text {
  font-weight: bold;
  color: #000;
}

.bold-title {
  font-weight: bold;
  color: #000;
  display: block; /* Force new line */
  margin-top: 20rpx; /* Add spacing before titles */
  margin-bottom: 10rpx;
}

.link-text {
  color: #1890ff;
  margin: 0 8rpx;
}

.link-group {
  display: block;
  margin-top: 10rpx;
}

.separator {
  color: #ccc;
  margin: 0 4rpx;
}

/* 输入区域 */
.chat-input-area {
  background: white;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #e0e0e0;
}

.input-wrapper {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.chat-input {
  flex: 1;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #2c3e50;
}

.send-btn {
  width: 140rpx;
  height: 80rpx;
  background: #667eea;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

.send-btn.disabled {
  background: #a0a0a0;
  color: #eeeeee;
}

/* 打字动画 */
.typing-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 30rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #b0b0b0;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}
