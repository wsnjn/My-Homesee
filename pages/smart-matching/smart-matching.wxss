/* 工业极简风格 - 智能匹配页 - 修正版 */

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #FFFFFF;
}

/* 消息列表 */
.chat-messages {
  flex: 1;
  overflow-y: auto;
  background: #F9FAFB;
}

.message-list {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.message {
  display: flex;
  gap: 16rpx;
  max-width: 85%;
}

.user-message {
  align-self: flex-end;
  flex-direction: row-reverse;
}

.ai-message {
  align-self: flex-start;
}

/* 头像 - 圆形（符合工业极简"圆形例外"规则）*/
.message-avatar {
  width: 64rpx;
  height: 64rpx;
  flex-shrink: 0;
  border-radius: 50%; /* 圆形头像 */
  overflow: hidden;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%; /* 圆形 */
}

.ai-avatar {
  width: 100%;
  height: 100%;
  background: #111827;
  color: #FFFFFF;
  border-radius: 50%; /* 圆形 */
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 24rpx;
}

/* 消息气泡 - 直角 */
.message-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.message-bubble {
  padding: 20rpx 24rpx;
  border-radius: 0; /* 直角 */
  box-shadow: none;
  font-size: 28rpx;
  line-height: 1.6;
  word-break: break-word;
  white-space: pre-wrap;
}

.ai-message .message-bubble {
  background: #FFFFFF;
  border: 1px solid #E5E7EB;
  color: #111827;
}

.user-message .message-bubble {
  background: #4B5563;
  color: #FFFFFF;
  border: none;
}

/* 格式化文本样式 */
.bold-text {
  font-weight: 700;
  color: inherit;
}

.bold-title {
  font-weight: 700;
  color: inherit;
  display: block;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

/* rich-text 内容样式 */
.rich-content {
  line-height: 1.6;
  word-break: break-word;
}

.link-text {
  color: #2563EB;
  text-decoration: underline;
  margin: 0 8rpx;
}

.link-group {
  display: inline-block;
}

.separator {
  color: #9CA3AF;
  margin: 0 4rpx;
}

/* 输入区域 - 直角 */
.chat-input-area {
  background: #FFFFFF;
  padding: 15rpx 20rpx;
  border-top: 1px solid #E5E7EB;
}

.input-wrapper {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.chat-input {
  width: 1000rpx;
  height: 72rpx;
  background: #F9FAFB;
  border-radius: 0; /* 直角 */
  border: 1px solid #E5E7EB;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #111827;
}

.chat-input:focus {
  border-color: #111827;
}

.send-btn {
  width: 40rpx;
  height: 72rpx;
  background: #111827;
  color: #FFFFFF;
  border-radius: 0; /* 直角 */
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  border: none;
}

.send-btn.disabled {
  background: #E5E7EB;
  color: #9CA3AF;
}

/* 打字动画 */
.typing-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 30rpx;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  background-color: #6B7280;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) { 
  animation-delay: -0.32s; 
}

.dot:nth-child(2) { 
  animation-delay: -0.16s; 
}

@keyframes bounce {
  0%, 80%, 100% { 
    transform: scale(0); 
    opacity: 0.5;
  }
  40% { 
    transform: scale(1); 
    opacity: 1;
  }
}
