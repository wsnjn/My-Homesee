/* pages/user-profile/user-profile.wxss */
/* Industrial Minimal - User Profile */

page {
  background: #FFFFFF;
  color: #111827;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

.profile-container {
  min-height: 100vh;
  padding-bottom: 60rpx;
}

/* Custom Navbar */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx; /* Standard navbar height */
  padding: 0 32rpx;
  padding-top: env(safe-area-inset-top);
  background: #FFFFFF;
  border-bottom: 1px solid #111827; /* Strong border */
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-left, .nav-right {
  width: 80rpx;
  display: flex;
  align-items: center;
}

.nav-center {
  font-size: 32rpx;
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Action Buttons */
.action-buttons {
  display: flex;
  gap: 16rpx;
}

.btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 0; /* Sharp */
  line-height: 1.5;
  margin: 0;
}

.save-btn {
  background: #111827;
  color: #FFFFFF;
  border: 1px solid #111827;
}

.cancel-btn {
  background: #FFFFFF;
  color: #111827;
  border: 1px solid #E5E7EB;
}

/* Scroll Content */
.content-scroll {
  height: calc(100vh - 88rpx - env(safe-area-inset-top));
}

.content-wrapper {
  padding: 40rpx 32rpx;
}

/* Card Common Styles */
.info-card {
  margin-bottom: 48rpx;
}

.card-title {
  font-size: 24rpx;
  font-weight: 800;
  color: #9CA3AF;
  text-transform: uppercase;
  letter-spacing: 2px;
  margin-bottom: 24rpx;
  border-left: 4rpx solid #111827;
  padding-left: 16rpx;
}

/* Avatar Card */
.avatar-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 32rpx;
  border-bottom: 1px solid #E5E7EB;
}

.avatar-section {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 24rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50% !important; /* Round avatar */
  border: 2rpx solid #E5E7EB;
}

.avatar-overlay {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s;
}

.avatar-wrapper:active .avatar-overlay {
  opacity: 1;
}

.avatar-tip {
  font-size: 24rpx;
  color: #6B7280;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Info Grids */
.info-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 0;
  border: 1px solid #E5E7EB;
}

.info-item {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  border-bottom: 1px solid #E5E7EB;
  background: #FFFFFF;
  transition: background 0.2s;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item:active {
  background: #F9FAFB;
}

.label {
  font-size: 22rpx;
  color: #6B7280;
  text-transform: uppercase;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.value {
  font-size: 28rpx;
  color: #111827;
  font-weight: 500;
  min-height: 40rpx;
}

.value.placeholder {
  color: #9CA3AF;
  font-style: italic;
}

.value.disabled {
  color: #9CA3AF;
}

/* Edit Inputs */
.edit-input {
  font-size: 28rpx;
  color: #111827;
  border-bottom: 2px solid #111827;
  padding: 4rpx 0;
  width: 100%;
}

.edit-textarea {
  font-size: 28rpx;
  color: #111827;
  border: 1px solid #E5E7EB;
  padding: 16rpx;
  width: 100%;
  min-height: 120rpx;
  box-sizing: border-box;
}

/* Layout variations */
.full-width {
  grid-column: 1 / -1;
}

/* Logout (Optional if needed in future) */
.logout-btn {
  margin-top: 40rpx;
  background: #FFFFFF;
  border: 1px solid #EF4444;
  color: #EF4444;
  border-radius: 0;
  font-weight: 600;
}