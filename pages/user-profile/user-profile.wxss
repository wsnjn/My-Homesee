/* pages/user-profile/user-profile.wxss */
.profile-container {
  height: 100vh;
  background: #f0f2f5;
  display: flex;
  flex-direction: column;
}

/* Navigation Bar */
.navbar {
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 100;
}

.nav-center {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn {
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  line-height: 1.5;
  margin: 0;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.save-btn {
  background: #667eea;
  color: #fff;
}

/* Content */
.content-scroll {
  flex: 1;
  overflow-y: auto;
}

.content-wrapper {
  padding: 30rpx;
}

/* Cards */
.info-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid #667eea;
}

/* Avatar Section */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.1);
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50%;
  background: rgba(0,0,0,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 10rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

/* Info Grid */
.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.info-item.full-width {
  grid-column: span 2;
}

.label {
  font-size: 24rpx;
  color: #999;
}

.value {
  font-size: 28rpx;
  color: #333;
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  min-height: 40rpx;
  transition: all 0.2s;
}

.value:active {
  background: #eef0f2;
}

.value.placeholder {
  color: #ccc;
}

.value.disabled {
  background: transparent;
  padding-left: 0;
  color: #666;
}

.edit-input {
  font-size: 28rpx;
  color: #333;
  padding: 16rpx 20rpx;
  background: #fff;
  border: 2rpx solid #667eea;
  border-radius: 12rpx;
  height: 40rpx;
}

.edit-textarea {
  font-size: 28rpx;
  color: #333;
  padding: 16rpx 20rpx;
  background: #fff;
  border: 2rpx solid #667eea;
  border-radius: 12rpx;
  width: auto;
  min-height: 100rpx;
}