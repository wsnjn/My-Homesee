/* pages/login/login.wxss */
/* 工业极简风格 - 登录页 */

.login-container {
  min-height: 100vh;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
}

/* 移除背景装饰圆 - 违反工业极简原则 */
.bg-circle {
  display: none;
}

/* 主卡片 - 直角设计 */
.glass-card {
  width: 100%;
  max-width: 650rpx;
  background: #FFFFFF;
  backdrop-filter: none;
  border-radius: 0;
  padding: 60rpx 40rpx;
  box-shadow: none;
  border: 1px solid #E5E7EB;
  z-index: 1;
}

/* 头部 */
.login-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.logo-area {
  margin-bottom: 20rpx;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 0;
}

.login-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 8rpx;
  letter-spacing: -0.5px;
}

.login-subtitle {
  font-size: 26rpx;
  color: #6B7280;
  font-weight: 400;
}

/* 表单 */
.login-form {
  display: block;
}

/* 输入组 - 直角设计 */
.input-group {
  position: relative;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 0;
  padding: 0 30rpx;
  height: 96rpx;
  box-shadow: none;
  border: 1px solid #E5E7EB;
  transition: border-color 0.2s;
}

.input-group:focus-within {
  border-color: #111827;
  box-shadow: none;
  transform: none;
}

.input-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  color: #6B7280;
}

.input-field {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #111827;
  background: transparent;
  border: none;
}

.input-placeholder {
  color: #9CA3AF;
}

/* 按钮 - 黑色直角 */
.submit-btn {
  margin-top: 40rpx;
  background: #111827;
  color: #FFFFFF;
  border-radius: 0;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: none;
  transition: background-color 0.2s;
  border: none;
}

.submit-btn:active {
  transform: none;
  background-color: #374151;
  box-shadow: none;
}

.submit-btn.loading {
  opacity: 0.8;
  background-color: #6B7280;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  margin-left: 16rpx;
  border: 3px solid rgba(255, 255, 255, 0.3);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 切换区域 */
.toggle-area {
  margin-top: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.toggle-text {
  color: #6B7280;
}

.toggle-btn {
  color: #111827;
  font-weight: 600;
  margin-left: 10rpx;
  padding: 0;
  background: transparent;
  border-radius: 0;
  border: none;
  border-bottom: 2px solid #111827;
  transition: color 0.2s;
}

.toggle-btn:active {
  background: transparent;
  color: #374151;
}

/* 错误消息 */
.error-message {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FEE2E2;
  padding: 20rpx;
  border-radius: 0;
  margin-bottom: 30rpx;
  border: 1px solid #EF4444;
}

.error-message icon {
  margin-right: 10rpx;
}

.error-message text {
  color: #EF4444;
  font-size: 26rpx;
}

/* 底部协议 */
.footer-agreement {
  margin-top: 48rpx;
  font-size: 22rpx;
  color: #6B7280;
  text-align: center;
  z-index: 1;
}

.footer-agreement .link {
  color: #111827;
  display: inline-block;
  margin: 0 4rpx;
  border-bottom: 1px solid #111827;
}
