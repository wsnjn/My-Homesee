/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

/* 背景装饰圆 */
.bg-circle {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  z-index: 0;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  background: rgba(102, 126, 234, 0.4);
  top: -100rpx;
  right: -100rpx;
  animation: float 8s infinite ease-in-out;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  background: rgba(118, 75, 162, 0.4);
  bottom: -50rpx;
  left: -50rpx;
  animation: float 8s infinite ease-in-out reverse;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0); }
  50% { transform: translate(20rpx, 30rpx); }
}

/* 玻璃拟态卡片 */
.glass-card {
  width: 100%;
  max-width: 650rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  z-index: 1;
  animation: slideUp 0.6s ease-out;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 头部 */
.login-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.logo-area {
  margin-bottom: 10rpx;
}

.app-logo {
  width: 100rpx;
  height: 100rpx;
}

.login-title {
  display: block;
  font-size: 40rpx;
  font-weight: 800;
  color: #2d3436;
  margin-bottom: 6rpx;
}

.login-subtitle {
  font-size: 26rpx;
  color: #636e72;
}

/* 表单 */
.login-form {
  display: block;
}

.input-group {
  position: relative;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 0 30rpx;
  height: 88rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input-group:focus-within {
  border-color: #667eea;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.2);
  transform: translateY(-2rpx);
}

.input-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  opacity: 0.7;
}

.input-field {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #2d3436;
}

.input-placeholder {
  color: #b2bec3;
}

/* 按钮 */
.submit-btn {
  margin-top: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
  border: none;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
}

.submit-btn.loading {
  opacity: 0.8;
}

/* 切换区域 */
.toggle-area {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.toggle-text {
  color: #636e72;
}

.toggle-btn {
  color: #667eea;
  font-weight: 600;
  margin-left: 10rpx;
  padding: 10rpx 20rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 30rpx;
  transition: all 0.3s;
}

.toggle-btn:active {
  background: rgba(102, 126, 234, 0.2);
}

/* 错误消息 */
.error-message {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffecec;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  animation: shake 0.4s ease-in-out;
}

.error-message icon {
  margin-right: 10rpx;
}

.error-message text {
  color: #ff6b6b;
  font-size: 26rpx;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  75% { transform: translateX(10rpx); }
}

/* 底部协议 */
.footer-agreement {
  margin-top: 40rpx;
  font-size: 22rpx;
  color: #636e72;
  text-align: center;
  z-index: 1;
}

.footer-agreement .link {
  color: #667eea;
  display: inline-block;
  margin: 0 4rpx;
}
