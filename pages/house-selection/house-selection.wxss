/* pages/house-selection/house-selection.wxss */
/* 工业极简风格 - 房源精选页 */

.house-selection-container {
  min-height: 100vh;
  background: #FFFFFF;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx 30rpx;
  background: #FFFFFF;
  border-bottom: 1px solid #E5E7EB;
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.search-input-container {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
}

.search-input {
  width: 100%;
  height: 72rpx;
  padding: 0 50rpx 0 24rpx;
  background: #F9FAFB;
  border: 1px solid #E5E7EB;
  border-radius: 0;
  font-size: 28rpx;
}

.search-icon-wrapper {
  position: absolute;
  right: 24rpx;
}

.filter-btn {
  width: 120rpx;
  min-width: 120rpx;
  max-width: 120rpx;
  height: 72rpx;
  background: #111827;
  color: #FFFFFF;
  border-radius: 0;
  border: none;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  flex-shrink: 0;
  padding: 0;
  margin: 0;
  line-height: 1;
}

/* 重置小程序按钮默认样式 */
.filter-btn::after {
  border: none;
}

/* 排序选项 */
.sort-options {
  display: flex;
  background: #FFFFFF;
  padding: 0 30rpx;
  border-bottom: 1px solid #E5E7EB;
  overflow-x: auto;
  white-space: nowrap;
}

.sort-option {
  padding: 20rpx 24rpx;
  font-size: 26rpx;
  color: #6B7280;
  position: relative;
  font-weight: 500;
  flex-shrink: 0;
}

.sort-option.active {
  color: #111827;
  font-weight: 600;
}

.sort-option.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 24rpx;
  right: 24rpx;
  height: 3rpx;
  background: #111827;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #FFFFFF;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.filter-header {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #E5E7EB;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0;
  position: relative;
}

.filter-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #111827;
}

.reset-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 8rpx 20rpx;
  background: #F9FAFB;
  border: 1px solid #E5E7EB;
  border-radius: 0;
  font-size: 24rpx;
  color: #6B7280;
}

.filter-content {
  flex: 1;
  height: 100%; /* 确保可以滚动 */
  padding: 20rpx 30rpx;
}

.filter-section {
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #F3F4F6;
}

.filter-section:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.filter-label {
  font-size: 22rpx;
  font-weight: 700;
  color: #9CA3AF;
  margin-bottom: 12rpx;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.filter-row {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.filter-row-horizontal {
  display: flex;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.picker-half {
  flex: 1;
}

.picker-item {
  padding: 16rpx 20rpx;
  background: #FFFFFF;
  border: 1px solid #E5E7EB;
  border-radius: 0;
  font-size: 26rpx;
  color: #111827;
}

.range-inputs {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.range-group {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.range-group input {
  flex: 1;
  padding: 16rpx 20rpx;
  background: #FFFFFF;
  border: 1px solid #E5E7EB;
  border-radius: 0;
  font-size: 26rpx;
  color: #111827;
}

.range-divider {
  color: #9CA3AF;
  font-size: 24rpx;
}

.options-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.option-item {
  padding: 16rpx 28rpx;
  background: #F9FAFB;
  border: 1px solid #E5E7EB;
  border-radius: 0;
  font-size: 26rpx;
  color: #6B7280;
}

.option-item.active {
  background: #111827;
  color: #FFFFFF;
  border-color: #111827;
}

.filter-actions {
  padding: 16rpx 30rpx;
  border-top: 1px solid #E5E7EB;
  display: flex;
  gap: 12rpx;
  flex-shrink: 0;
}

.cancel-btn,
.apply-btn {
  flex: 1;
  height: 76rpx;
  border-radius: 0;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background: #FFFFFF;
  color: #6B7280;
  border: 1px solid #E5E7EB;
}

.apply-btn {
  background: #111827;
  color: #FFFFFF;
}

/* 房屋列表 */
.house-list {
  flex: 1;
  background: #FFFFFF;
}

/* 房屋卡片 - 对齐Vue3前端 */
.house-card {
  background: #FFFFFF;
  border: 1px solid #E5E7EB;
  border-radius: 0;
  margin: 20rpx 30rpx 20rpx 30rpx; /* 左右边距30rpx */
  overflow: hidden;
  transition: border-color 0.2s;
}

.house-card:active {
  border-color: #111827;
}

/* 图片区域 */
.house-image-wrapper {
  position: relative;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

.house-image {
  width: 100%;
  height: 100%;
}

/* 标签组 - 左上角 */
.house-tags {
  position: absolute;
  top: 20rpx;
  left: 0;
  display: flex;
  gap: 12rpx;
  z-index: 10;
}

.tag {
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: #FFFFFF;
  border-radius: 0;
}

.status-tag.status-available {
  background: #10B981;
}

.status-tag.status-unavailable {
  background: #6B7280;
}

.type-tag {
  background: #111827;
}

/* VR看房叠加层 - 默认隐藏 */
.vr-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(17, 24, 39, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s;
  z-index: 20;
}

/* 手指按住时显示VR按钮 */
.house-image-wrapper-hover .vr-overlay {
  opacity: 1;
}

/* VR看房按钮 */
.vr-tour-btn {
  background: #FFFFFF !important;
  color: #111827 !important;
  border: none !important;
  border-radius: 0 !important;
  padding: 20rpx 40rpx !important;
  font-size: 28rpx !important;
  font-weight: 600 !important;
  letter-spacing: 2rpx !important;
  text-transform: uppercase !important;
  box-sizing: border-box !important;
}

.vr-tour-btn::after {
  border: none !important;
}

/* 房屋信息 */
.house-info {
  padding: 24rpx;
}

.house-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 16rpx;
}

.house-address,
.landlord-phone {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 12rpx;
}

.house-address text,
.landlord-phone text {
  flex: 1;
}

.house-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 16rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #6B7280;
}

.meta-divider {
  color: #E5E7EB;
}

/* 底部：价格和按钮 */
.house-footer {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1px solid #E5E7EB;
}

.price-container {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.price-symbol {
  font-size: 28rpx;
  color: #111827;
  font-weight: 700;
}

.price-value {
  font-size: 48rpx;
  color: #111827;
  font-weight: 700;
  font-family: 'JetBrains Mono', monospace;
}

.price-unit {
  font-size: 24rpx;
  color: #6B7280;
  padding-right:260rpx;
}

.action-btn {
  padding: 16rpx 32rpx !important;
  background: #FFFFFF !important;
  color: #111827 !important;
  border: 1px solid #111827 !important;
  border-radius: 0 !important;
  font-size: 26rpx !important;
  font-weight: 600 !important;
  max-width: 180rpx !important;
  flex-shrink: 0 !important;
  text-align: center !important;
  box-sizing: border-box !important;
  line-height: 1 !important;
  margin-left: auto !important;
}

/* 重置小程序button默认样式 */
.action-btn::after {
  border: none !important;
}

.action-btn:active {
  background: #F9FAFB !important;
}

.action-btn.disabled {
  background: #F9FAFB !important;
  color: #9CA3AF !important;
  border-color: #E5E7EB !important;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-icon-wrapper {
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #6B7280;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #9CA3AF;
}

/* 加载状态 */
.loading-container {
  padding: 60rpx;
  text-align: center;
}

.loading-text {
  font-size: 26rpx;
  color: #6B7280;
}

.no-more-container {
  padding: 40rpx;
  text-align: center;
}

.no-more-text {
  font-size: 24rpx;
  color: #9CA3AF;
}

/* 筛选遮罩 */
.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}
