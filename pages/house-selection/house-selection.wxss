/* pages/house-selection/house-selection.wxss */
.house-selection-container {
  min-height: 100vh;
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e9ecef;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-container {
  flex: 1;
  position: relative;
  margin-right: 16rpx;
  min-width: 75%;
}

.search-input {
  width: 100%;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 30rpx 0 70rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 1rpx solid #eee;
}

.search-icon-wrapper {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
}

.filter-btn {
  width: 140rpx;
  max-width: 140rpx;
  min-width: 0;
  height: 68rpx;
  padding: 0 16rpx;
  background-color: #455a64;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  margin: 0;
  flex-shrink: 0;
  white-space: nowrap;
  box-sizing: border-box;
}

.filter-icon-wrapper {
  margin-right: 10rpx;
  display: flex;
}

/* 排序选项 */
.sort-options {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e9ecef;
  overflow-x: auto;
  white-space: nowrap;
}

.sort-option {
  padding: 12rpx 24rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #6c757d;
  border-radius: 30rpx;
  background-color: #f8f9fa;
  display: inline-block;
}

.sort-option.active {
  background-color: #2c3e50;
  color: #ffffff;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-radius: 30rpx 30rpx 0 0;
  z-index: 1000;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.reset-btn {
  padding: 10rpx 24rpx;
  background-color: transparent;
  color: #6c757d;
  font-size: 26rpx;
  border: 1rpx solid #e9ecef;
  border-radius: 30rpx;
  margin: 0;
  line-height: 1.5;
}

.filter-content {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.filter-section {
  margin-bottom: 40rpx;
}

.filter-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.range-display {
  text-align: center;
  font-size: 26rpx;
  color: #6c757d;
  margin-top: 10rpx;
}

/* 选项网格 */
.options-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.option-item {
  padding: 16rpx 0;
  text-align: center;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #6c757d;
}

.option-item.active {
  background-color: #2c3e50;
  color: #ffffff;
}

/* 特色选项 */
.feature-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.feature-option {
  padding: 16rpx 24rpx;
  background-color: #f8f9fa;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #6c757d;
  display: flex;
  align-items: center;
}

.feature-option.active {
  background-color: #2c3e50;
  color: #ffffff;
}

.feature-icon {
  margin-right: 10rpx;
  display: flex;
}

/* 筛选操作 */
.filter-actions {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #e9ecef;
  gap: 20rpx;
  background: #fff;
}

.cancel-btn,
.apply-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  margin: 0;
}

.cancel-btn {
  background-color: #f8f9fa;
  color: #6c757d;
}

.apply-btn {
  background-color: #2c3e50;
  color: #ffffff;
}

/* 房屋列表 */
.house-list {
  flex: 1;
  overflow-y: auto;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-icon-wrapper {
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #6c757d;
}

/* 房屋卡片 */
.house-card {
  background-color: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.house-image-container {
  position: relative;
  height: 400rpx;
}

.house-image {
  width: 100%;
  height: 100%;
}

.vr-badge {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 8rpx 16rpx;
  background-color: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.favorite-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.favorite-btn.active {
  background-color: #ff6b6b;
}

/* 房屋信息 */
.house-info {
  padding: 30rpx;
}

.house-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.house-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.house-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff6b6b;
}

.unit {
  font-size: 24rpx;
  font-weight: normal;
  color: #999;
}

.house-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6c757d;
  gap: 8rpx;
}

.house-features {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.feature-tag {
  padding: 6rpx 16rpx;
  background-color: #f0f2f5;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #6c757d;
}

/* 加载状态 */
.loading-container,
.no-more-container {
  padding: 40rpx;
  text-align: center;
}

.loading-text,
.no-more-text {
  font-size: 28rpx;
  color: #6c757d;
}

/* 筛选遮罩 */
.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

/* 房屋状态标签 */
.house-tags {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  display: flex;
  gap: 12rpx;
}

.status-tag,
.type-tag {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-tag.status-available {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: #fff;
}

.status-tag.status-unavailable {
  background: linear-gradient(135deg, #95a5a6, #7f8c8d);
  color: #fff;
}

.type-tag {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
}

/* 地址信息 */
.house-address {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 16rpx;
}

/* 房东电话 */
.landlord-phone {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #4CAF50;
  margin-bottom: 16rpx;
  padding: 12rpx 16rpx;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 12rpx;
}

/* 房屋底部 */
.house-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f2f5;
  background: #fafbfc;
}

.price-container {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.price-value {
  font-size: 42rpx;
  font-weight: 700;
  color: #ff6b6b;
  margin: 0 4rpx;
}

.price-unit {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
}

.vr-tour-btn,
.appointment-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  margin: 0;
  line-height: 1.4;
}

.vr-tour-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
}

.appointment-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: #fff;
}

.appointment-btn.disabled {
  background: #ccc;
  color: #999;
}

/* 新的简化卡片样式 - 温馨租房主题 */
/* 状态标签 - 右上角 */
.status-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-badge.available {
  background-color: #e8f5e9;
  color: #2e7d32;
  border: 1rpx solid #a5d6a7;
}

.status-badge.unavailable {
  background-color: #f5f5f5;
  color: #757575;
  border: 1rpx solid #e0e0e0;
}

/* 租赁类型标签 - 左上角 */
.rental-type-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  font-weight: 600;
  background-color: #fff3e0;
  color: #e65100;
  border: 1rpx solid #ffcc80;
}

/* 标题和价格行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

/* 房屋规格信息 */
.house-specs {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  color: #666;
}

.spec-item {
  font-size: 26rpx;
  color: #666;
}

.spec-divider {
  font-size: 24rpx;
  color: #e0e0e0;
  margin: 0 14rpx;
}

/* 房东电话行 */
.landlord-row {
  display: flex;
  align-items: center;
  padding: 14rpx 18rpx;
  background-color: #fafafa;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  margin-bottom: 18rpx;
}

.phone-icon {
  font-size: 26rpx;
  margin-right: 10rpx;
}

.phone-number {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 操作按钮区域 */
.card-actions {
  display: flex;
  gap: 16rpx;
}

.btn-vr,
.btn-appointment {
  flex: 1;
  height: 76rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* VR按钮 - 深灰蓝，稳重 */
.btn-vr {
  background-color: #455a64;
  color: #fff;
}

/* 预约按钮 - 珊瑚橙，温暖邀请 */
.btn-appointment {
  background-color: #ff7043;
  color: #fff;
}

.btn-appointment.disabled {
  background-color: #e0e0e0;
  color: #9e9e9e;
}

/* 更新价格颜色 - 温暖的橙红色 */
.price-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #e64a19;
}



