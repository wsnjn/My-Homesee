/* pages/appointment/appointment.wxss */
/* 工业极简风格 - 预约页 */

.container {
  padding: 30rpx;
  background-color: #FFFFFF;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 房屋信息卡片 - 直角 */
.house-card {
  background: #FFFFFF;
  border-radius: 0;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: none;
  border: 1px solid #E5E7EB;
}

.house-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.house-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  flex: 1;
  margin-right: 20rpx;
}

/* 状态标签 - 直角 */
.house-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 0;
  white-space: nowrap;
}

.status-available {
  background: #D1FAE5;
  color: #065F46;
  border: 1px solid #10B981;
}

.status-unavailable {
  background: #FEE2E2;
  color: #991B1B;
  border: 1px solid #EF4444;
}

.house-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
}

.info-row .label {
  color: #6B7280;
  width: 120rpx;
  flex-shrink: 0;
}

.info-row .value {
  color: #111827;
  flex: 1;
}

.info-row .value.price {
  color: #111827;
  font-weight: 700;
  font-size: 28rpx;
}

/* 表单卡片 - 直角 */
.form-card {
  background: #FFFFFF;
  border-radius: 0;
  padding: 30rpx;
  margin-bottom: 120rpx;
  box-shadow: none;
  border: 1px solid #E5E7EB;
}

.form-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #E5E7EB;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #F3F4F6;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.vertical {
  flex-direction: column;
  align-items: flex-start;
}

.form-item.vertical .label {
  margin-bottom: 20rpx;
}

.form-item.vertical textarea {
  width: 100%;
  padding: 20rpx;
  background: #F9FAFB;
  border-radius: 0;
  border: 1px solid #E5E7EB;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #111827;
}

.label {
  width: 180rpx;
  font-size: 28rpx;
  color: #111827;
  font-weight: 500;
}

.required {
  color: #EF4444;
}

input, .picker, textarea {
  flex: 1;
  font-size: 28rpx;
  color: #111827;
}

.placeholder {
  color: #9CA3AF;
}

/* 提交区域 */
.submit-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #FFFFFF;
  box-shadow: none;
  border-top: 1px solid #E5E7EB;
  z-index: 100;
}

.submit-btn {
  background: #111827;
  color: #FFFFFF;
  border-radius: 0;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  height: 88rpx;
}

.submit-btn[disabled] {
  background: #E5E7EB;
  color: #9CA3AF;
}

/* 模态框 - 直角*/
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #FFFFFF;
  width: 600rpx;
  border-radius: 0;
  padding: 40rpx 30rpx;
  text-align: center;
  border: 1px solid #E5E7EB;
}

.modal-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
  margin-top: 20rpx;
}

.modal-body {
  margin-bottom: 40rpx;
}

.modal-msg {
  font-size: 28rpx;
  color: #6B7280;
  margin-bottom: 10rpx;
}

.appointment-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  margin: 20rpx 0;
  font-family: 'JetBrains Mono', monospace;
}

.modal-tip {
  font-size: 24rpx;
  color: #9CA3AF;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  font-size: 28rpx;
  border-radius: 0;
  padding: 16rpx 0;
  border: none;
  font-weight: 600;
}

.modal-btn.secondary {
  background: #F9FAFB;
  color: #6B7280;
  border: 1px solid #E5E7EB;
}

.modal-btn.primary {
  background: #111827;
  color: #FFFFFF;
}