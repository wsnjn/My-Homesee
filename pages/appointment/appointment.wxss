/* pages/appointment/appointment.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.house-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.house-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.house-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.house-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  white-space: nowrap;
}

.status-available {
  background: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.status-unavailable {
  background: #fff1f0;
  color: #f5222d;
  border: 1rpx solid #ffa39e;
}

.house-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
}

.info-row .label {
  color: #999;
  width: 90rpx;
  flex-shrink: 0;
}

.info-row .value {
  color: #333;
  flex: 1;
}

.info-row .value.price {
  color: #ff4d4f;
  font-weight: bold;
  font-size: 28rpx;
}

.form-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 120rpx; /* Space for button */
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.form-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.vertical {
  flex-direction: column;
  align-items: flex-start;
}

.form-item.vertical .label {
  margin-bottom: 20rpx;
}

.form-item.vertical textarea {
  width: 100%;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.label {
  width: 180rpx;
  font-size: 28rpx;
  color: #333;
}

.required {
  color: #ff4d4f;
}

input, .picker, textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.submit-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: white;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 100;
}

.submit-btn {
  background: #28a745;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn[disabled] {
  background: #a0d9b1;
  color: white;
}

/* Modal Styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  width: 600rpx;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  text-align: center;
}

.modal-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #28a745;
  margin-top: 20rpx;
}

.modal-body {
  margin-bottom: 40rpx;
}

.modal-msg {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.appointment-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0;
}

.modal-tip {
  font-size: 24rpx;
  color: #999;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 16rpx 0;
}

.modal-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.primary {
  background: #28a745;
  color: white;
}