/* pages/map-search/map-search.wxss */
page {
  height: 100vh;
  overflow: hidden;
  background-color: #f5f5f5; /* Fallback background */
  padding: 0;
  margin: 0;
}

.container {
  height: 100vh; /* Use vh instead of % */
  width: 100vw;
  position: relative;
  padding: 0;
  margin: 0;
}

/* Map Container */
/* Map Container */
.map {
  width: 100%;
  height: 100%;
}

/* Collapsible Sidebar - Right Side, Vertically Centered */
.sidebar {
  position: fixed;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 500rpx; /* Wider to accommodate longer search and filters */
  background: white;
  box-shadow: -4rpx 0 12rpx rgba(0,0,0,0.15);
  z-index: 100;
  transition: transform 0.3s ease;
  border-radius: 16rpx 0 0 16rpx; /* Rounded left corners */
}

.sidebar-closed {
  transform: translate(100%, -50%);
}

.sidebar-open {
  transform: translate(0, -50%);
}

.sidebar-content {
  padding: 28rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* Sidebar Search Bar */
.sidebar-search {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.sidebar-search-input {
  flex: 1;
  background: #F3F4F6;
  border: 1px solid #E5E7EB;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  font-size: 26rpx;
  color: #111827;
}

.sidebar-search-btn {
  width: 70rpx;
  height: 70rpx;
  background: #111827;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: opacity 0.2s;
}

.sidebar-search-btn:active {
  opacity: 0.7;
}

/* Sidebar AI Button */
.sidebar-ai-btn {
  width: 100%;
  background: #2563EB;
  color: white;
  border: none;
  padding: 14rpx 0;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
  text-align: center;
  transition: opacity 0.2s;
}

.sidebar-ai-btn:active {
  opacity: 0.8;
}

/* Sidebar Divider */
.sidebar-divider {
  height: 1px;
  background: #E5E7EB;
  margin: 8rpx 0;
}


/* Sidebar Filters */
.sidebar-filters {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.sidebar-tag {
  padding: 10rpx 20rpx;
  background: #F3F4F6;
  color: #4B5563;
  font-size: 24rpx;
  font-weight: 500;
  border: 1px solid #E5E7EB;
  border-radius: 6rpx;
  transition: all 0.2s;
}

.sidebar-tag:active {
  transform: scale(0.95);
}

.sidebar-tag.active {
  background: #111827;
  color: white;
  border-color: #111827;
}

/* Sidebar Toggle Button - Right Side */
.sidebar-toggle {
  position: fixed;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  background: white;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 101;
  font-size: 24rpx;
  color: #111827;
}

/* Search Overlay - Rebuilt */
.search-overlay {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, 
    rgba(255,255,255,1) 0%, 
    rgba(255,255,255,0.95) 70%, 
    rgba(255,255,255,0) 100%);
  z-index: 10;
  /* Top padding, sides padding, safe area bottom padding */
  padding: 20rpx 20rpx calc(env(safe-area-inset-bottom) + 10rpx) 20rpx;
  display: flex;
  flex-direction: column; /* Search on top, filters below */
  gap: 16rpx;
  pointer-events: none;
}

.search-bar {
  display: flex;
  align-items: center;
  background: white;
  border: 1px solid #E5E7EB;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  pointer-events: auto;
  margin: 0;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #111827;
}

.placeholder {
  color: #9CA3AF;
}

.search-btn {
  width: 50rpx;
  height: 50rpx;
  background: #111827;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Filters */
.filter-tags {
  display: flex;
  white-space: nowrap;
  padding-left: 0;
  margin: 0;
  overflow-x: auto;
  pointer-events: auto;
  /* Hide scrollbar */
  -webkit-overflow-scrolling: touch;
}

.filter-tags::-webkit-scrollbar {
  display: none;
}

.tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 56rpx;
  padding: 0 40rpx;
  background: white;
  color: #4B5563;
  font-size: 22rpx;
  font-weight: 500;
  line-height: 1;
  border: 1px solid #E5E7EB;
  border-radius: 28rpx;
  margin-right: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  transition: all 0.2s;
  flex-shrink: 0;
}

.tag.active {
  background: #111827;
  color: white;
  border-color: #111827;
}

/* Modal Overlay */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

/* Modal Content */
.modal-content {
  width: 680rpx;
  max-height: 80vh;
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  position: relative;
  overflow-y: auto;
  transform: scale(0.9);
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.modal-overlay.show .modal-content {
  transform: scale(1);
}

/* Close Button */
.modal-close {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #6B7280;
  z-index: 10;
}

/* Modal Header */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding-right: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  flex: 1;
}

.modal-price {
  font-size: 36rpx;
  font-weight: 800;
  color: #111827;
  white-space: nowrap;
}

.unit {
  font-size: 24rpx;
  font-weight: 400;
  color: #6B7280;
}

/* Modal Info */
.modal-info {
  margin-bottom: 20rpx;
}

.info-text {
  font-size: 26rpx;
  color: #6B7280;
}

/* Modal Tags */
.modal-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.modal-tag {
  font-size: 22rpx;
  color: #4B5563;
  background: #F3F4F6;
  padding: 6rpx 12rpx;
  border-radius: 4rpx;
}

/* Modal AI Section */
.modal-ai-section {
  margin-top: 20rpx;
  margin-bottom: 24rpx;
  padding-top: 20rpx;
  border-top: 1px dashed #E5E7EB;
}

.ai-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.ai-title-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #2563EB;
}

.ai-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.ai-tag {
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: #F9FAFB;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  border: 1px solid #F3F4F6;
}

.ai-tag-text {
  font-size: 20rpx;
  color: #4B5563;
}

.ai-dist-text {
  color: #9CA3AF;
  margin-left: 4rpx;
}

.empty-text {
  color: #9CA3AF;
}

/* Modal Action Button */
.modal-action-btn {
  background: #111827;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  width: 100%;
  border: none;
  padding: 24rpx 0;
}

.loading-spinner {
  width: 20rpx;
  height: 20rpx;
  border: 2px solid #E5E7EB;
  border-top-color: #2563EB;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
