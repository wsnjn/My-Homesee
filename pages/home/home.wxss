/* Pages are scoped by default, but we can use page selector for global-like styles */
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

.home-container {
  min-height: 100vh;
  overflow-x: hidden;
  padding-bottom: 40rpx;
}

/* Navbar Styles */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 160rpx; /* 80px * 2 */
  z-index: 1000;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
}

.navbar.scrolled {
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.nav-content {
  width: 100%;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.logo-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.nav-logo-canvas {
  height: 100rpx;
  width: 100rpx;
}

.logo-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #667eea; /* Gradient text not fully supported in simple text, using fallback color */
  letter-spacing: -1rpx;
}

.nav-links-container {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.login-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  padding: 12rpx 32rpx;
  border-radius: 50rpx;
  font-weight: 600;
  font-size: 28rpx;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

/* Hero Section */
.hero-section {
  position: relative;
  min-height: 90vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 160rpx 32rpx 64rpx; /* Top padding for navbar */
  overflow: hidden;
}

.hero-content {
  position: relative;
  z-index: 2;
  max-width: 100%;
}

.hero-title {
  font-size: 72rpx;
  font-weight: 800;
  line-height: 1.1;
  margin-bottom: 24rpx;
  color: #2c3e50;
}

.hero-subtitle {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 48rpx;
  font-weight: 300;
}

.hero-actions {
  display: flex;
  gap: 24rpx;
  justify-content: center;
}

.primary-btn {
  background: #2c3e50;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.secondary-btn {
  background: white;
  color: #2c3e50;
  border: 4rpx solid #2c3e50;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* Background Blobs */
.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  overflow: hidden;
  pointer-events: none;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.4;
}

.blob-1 {
  width: 500rpx;
  height: 500rpx;
  background: #667eea;
  top: -100rpx;
  left: -100rpx;
}

.blob-2 {
  width: 400rpx;
  height: 400rpx;
  background: #764ba2;
  bottom: -50rpx;
  right: -50rpx;
}

.blob-3 {
  width: 300rpx;
  height: 300rpx;
  background: #4facfe;
  top: 40%;
  left: 60%;
}

/* Features Section */
.main-content {
  padding: 64rpx 32rpx;
  position: relative;
  z-index: 2;
}

.section-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 48rpx;
  text-align: center;
  position: relative;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr; /* Mobile first, single column */
  gap: 32rpx;
}

.feature-card {
  background: white;
  padding: 40rpx;
  border-radius: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.card-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  color: white;
  font-size: 48rpx;
}

.vr-icon { background: linear-gradient(135deg, #667eea, #764ba2); }
.match-icon { background: linear-gradient(135deg, #FF9A9E, #FECFEF); }
.safe-icon { background: linear-gradient(135deg, #a18cd1, #fbc2eb); }
.fix-icon { background: linear-gradient(135deg, #84fab0, #8fd3f4); }
.community-icon { background: linear-gradient(135deg, #fccb90, #d57eeb); }
.virtual-icon { background: linear-gradient(135deg, #00f2ff, #007bff); }

.feature-card .h3 {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.feature-card .p {
  color: #666;
  line-height: 1.6;
  margin-bottom: 32rpx;
  font-size: 28rpx;
}

.link-text {
  color: #667eea;
  font-weight: 600;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* Appointments Section */
.appointments-section {
  margin-top: 96rpx;
  background: white;
  border-radius: 30rpx;
  padding: 32rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.view-all-btn {
  color: #667eea;
  font-weight: 600;
  font-size: 28rpx;
}

.appointments-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.appointment-card {
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid #e9ecef;
}

.apt-status {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.status-pending { background: #fff3cd; color: #856404; }
.status-confirmed { background: #d4edda; color: #155724; }
.status-completed { background: #d1ecf1; color: #0c5460; }
.status-cancelled { background: #f8d7da; color: #721c24; }
.status-expired { background: #e2e3e5; color: #383d41; }
.status-missed { background: #f8d7da; color: #721c24; }

.apt-time {
  font-weight: 600;
  color: #2c3e50;
  font-size: 30rpx;
  margin-bottom: 8rpx;
}

.apt-type {
  font-size: 26rpx;
  color: #666;
}

.detail-btn {
  width: 100%;
  margin-top: 16rpx;
  background: white;
  border: 1rpx solid #e0e0e0;
  font-size: 26rpx;
  padding: 10rpx;
}

/* User Menu */
.user-info-container {
  position: relative;
}

.button-message {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 68rpx;
  padding: 8rpx 16rpx 8rpx 8rpx;
  height: 80rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  width: auto;
  margin: 0;
}

.content-avatar {
  width: 64rpx;
  height: 64rpx;
  position: relative;
  margin-right: 16rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}

.status-user {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  background-color: #00da00;
  border: 2rpx solid white;
  z-index: 2;
}

.notice-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.username {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.lable-message {
  font-size: 24rpx;
  color: #666;
}

.user-id {
  font-size: 20rpx;
  color: #999;
}

.user-menu {
  position: absolute;
  top: 100rpx;
  right: 0;
  width: 300rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.15);
  padding: 16rpx;
  z-index: 1100;
}

.menu-item {
  padding: 24rpx;
  font-size: 28rpx;
  color: #2c3e50;
  display: flex;
  align-items: center;
  gap: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}
