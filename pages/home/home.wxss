/* 工业极简风格 - 首页 */
page {
  background-color: #FFFFFF;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

.home-container {
  min-height: 100vh;
  overflow-x: hidden;
  padding-bottom: 40rpx;
  background: #FFFFFF;
}

/* Navbar Styles - 工业极简 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 160rpx;
  z-index: 1000;
  transition: border-color 0.2s;
  background: rgba(255, 255, 255, 1);
  backdrop-filter: none;
  border-bottom: 1px solid #E5E7EB;
  display: flex;
  align-items: center;
}

.navbar.scrolled {
  background: rgba(255, 255, 255, 1);
  box-shadow: none;
  border-bottom: 1px solid #111827;
}

.nav-content {
  width: 100%;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.logo-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.nav-logo-canvas {
  height: 100rpx;
  width: 100rpx;
  border-radius: 0;
}

.logo-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
  letter-spacing: -1rpx;
}

.nav-links-container {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* 登录按钮 - 黑色直角 */
.login-btn {
  background: #111827;
  color: white;
  border: none;
  padding: 12rpx 32rpx;
  border-radius: 0;
  font-weight: 600;
  font-size: 28rpx;
  box-shadow: none;
}

.login-btn:hover {
  background: #374151;
}

/* Hero Section - 移除装饰性 blob */
.hero-section {
  position: relative;
  min-height: 90vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 160rpx 32rpx 64rpx;
  overflow: hidden;
  background: #FFFFFF;
}

.hero-content {
  position: relative;
  z-index: 2;
  max-width: 100%;
}

.hero-title {
  font-size: 72rpx;
  font-weight: 800;
  line-height: 0.9;
  margin-bottom: 48rpx;
  color: #111827;
  white-space: pre-line; /* Support line breaks */
  letter-spacing: -3px;
  text-transform: uppercase;
}

.hero-subtitle {
  font-size: 32rpx;
  color: #6B7280;
  margin-bottom: 48rpx;
  font-weight: 400;
}

.hero-actions {
  display: flex;
  gap: 24rpx;
  justify-content: center;
}

/* 主按钮 - 黑色直角 */
.primary-btn {
  background: #111827;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 0;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8rpx;
  border: none;
  transition: background-color 0.2s;
}

.primary-btn:hover {
  background: #374151;
}

/* 次级按钮 - 白底黑边 */
.secondary-btn {
  background: white;
  color: #111827;
  border: 2px solid #111827;
  padding: 20rpx 40rpx;
  border-radius: 0;
  font-size: 32rpx;
  font-weight: 600;
  transition: background-color 0.2s;
}

.secondary-btn:hover {
  background: #F9FAFB;
}

/* Industrial Grid Background - 工业网格背景 */
.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  pointer-events: none;
  opacity: 0.4;
}

.grid-line {
  position: absolute;
  background: #E5E7EB;
}

.grid-line.horizontal {
  left: 0;
  right: 0;
  height: 1px;
}

.grid-line.vertical {
  top: 0;
  bottom: 0;
  width: 1px;
}

/* 移除blob样式 */
.blob {
  display: none;
}

/* Features Section */
.main-content {
  padding: 64rpx 32rpx;
  position: relative;
  z-index: 2;
  background: #FFFFFF;
}

.section-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 48rpx;
  text-align: center;
  position: relative;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 32rpx;
}

/* 功能卡片 - 直角设计 */
.feature-card {
  background: white;
  padding: 40rpx;
  border-radius: 0;
  box-shadow: none;
  border: 1px solid #E5E7EB;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  transition: border-color 0.2s;
}

.feature-card:hover {
  border-color: #111827;
}

/* 卡片图标 - 直角黑色背景 */
.card-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 0;
  background: #FFFFFF; /* White background */
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  color: #111827; /* Black icon color context */
  font-size: 48rpx;
}

/* 功能标题和描述 */
.feature-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 16rpx;
}

.feature-description {
  color: #6B7280;
  line-height: 1.6;
  margin-bottom: 32rpx;
  font-size: 28rpx;
}

.link-text {
  color: #111827;
  font-weight: 600;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  border-bottom: 1px solid #111827;
  padding-bottom: 4rpx;
}

/* Appointments Section */
.appointments-section {
  margin-top: 96rpx;
  background: white;
  border-radius: 0;
  padding: 32rpx;
  box-shadow: none;
  border: 1px solid #E5E7EB;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.view-all-btn {
  color: #111827;
  font-weight: 600;
  font-size: 28rpx;
  border-bottom: 1px solid #111827;
}

.appointments-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 预约卡片 - 直角设计 */
.appointment-card {
  background: #F9FAFB;
  padding: 24rpx;
  border-radius: 0;
  border: 1px solid #E5E7EB;
}

/* 状态标签 - 直角 */
.apt-status {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 0;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.status-pending { 
  background: #FEF3C7; 
  color: #92400E;
  border: 1px solid #FCD34D;
}

.status-confirmed { 
  background: #D1FAE5; 
  color: #065F46;
  border: 1px solid #10B981;
}

.status-completed { 
  background: #DBEAFE; 
  color: #1E3A8A;
  border: 1px solid #3B82F6;
}

.status-cancelled { 
  background: #FEE2E2; 
  color: #991B1B;
  border: 1px solid #EF4444;
}

.status-expired { 
  background: #F3F4F6; 
  color: #374151;
  border: 1px solid #9CA3AF;
}

.status-missed { 
  background: #FEE2E2; 
  color: #991B1B;
  border: 1px solid #EF4444;
}

.apt-time {
  font-weight: 600;
  color: #111827;
  font-size: 30rpx;
  margin-bottom: 8rpx;
}

.apt-type {
  font-size: 26rpx;
  color: #6B7280;
}

.detail-btn {
  width: 100%;
  margin-top: 16rpx;
  background: white;
  border: 1px solid #E5E7EB;
  border-radius: 0;
  font-size: 26rpx;
  padding: 10rpx;
  transition: border-color 0.2s;
}

.detail-btn:hover {
  border-color: #111827;
}

/* User Menu */
.user-info-container {
  position: relative;
}

/* User Info Button - Smooth Transition */
.button-message {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 40rpx !important; /* Force rounded corners */
  padding: 8rpx;
  height: 80rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  border: 1px solid #E5E7EB;
  width: 320rpx; /* Fixed width to prevent jumping */
  margin: 0;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  position: relative;
}

.button-message:active {
  transform: scale(0.98);
  background: #F9FAFB;
}

.content-avatar {
  width: 64rpx;
  height: 64rpx;
  position: relative;
  margin-right: 16rpx;
  flex-shrink: 0;
  z-index: 2; /* Keep avatar above text slider if overlap */
}

/* 头像 - 圆形 */
.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50% !important;
  overflow: hidden;
  border: 1px solid #F3F4F6;
}

.user-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 状态点 */
.status-user {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  background-color: #10B981;
  border: 2rpx solid white;
  z-index: 2;
}

/* Text Slider Container */
.info-slider {
  position: relative;
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  overflow: hidden;
}

/* Individual Slides */
.info-slide {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.main-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #111827;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-family: 'JetBrains Mono', monospace; /* Nice for numbers */
}

.sub-text {
  font-size: 18rpx;
  color: #6B7280;
  margin-top: -2rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* State 1: Default (Phone) */
.default-state {
  opacity: 1;
  transform: translateY(0);
}

.default-state.slide-out {
  opacity: 0;
  transform: translateY(-20rpx);
}

/* State 2: Long Press (Name) */
.active-state {
  opacity: 0;
  transform: translateY(20rpx);
}

.active-state.slide-in {
  opacity: 1;
  transform: translateY(0);
}


/* User Menu - 直角 */
.user-menu {
  position: absolute;
  top: 100rpx;
  right: 0;
  width: 300rpx;
  background: white;
  border-radius: 0;
  box-shadow: none;
  border: 1px solid #E5E7EB;
  padding: 0;
  z-index: 1100;
}

.menu-item {
  padding: 24rpx;
  font-size: 28rpx;
  color: #111827;
  display: flex;
  align-items: center;
  gap: 16rpx;
  border-bottom: 1px solid #E5E7EB;
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:hover {
  background: #F9FAFB;
}
