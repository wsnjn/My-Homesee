/* pages/community/community.wxss */
/* 工业极简风格 - 社区页 */

.community-container {
  height: 100vh;
  background-color: #F9FAFB;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 顶部Tab导航 - 工业极简 */
.top-tabs {
  display: flex;
  background: #fff;
  border-bottom: 1px solid #E5E7EB;
  padding: 0 40rpx;
  flex-shrink: 0;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #6B7280;
  position: relative;
  font-weight: 500;
}

.tab-item.active {
  color: #111827;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -1rpx;
  left: 20%;
  right: 20%;
  height: 4rpx;
  background: #111827;
  border-radius: 0;
}

/* 聊天内容区 */
.chat-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: #fff;
}

/* 用户信息 */
.user-profile {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1px solid #F3F4F6;
}

.profile-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50% !important;
  overflow: hidden;
  background: #111827;
}

.profile-info {
  flex: 1;
}

.profile-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.profile-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #10B981;
  margin-top: 6rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #10B981;
  border-radius: 50%;
}

/* 聊天Tab - 直角 */
.chat-tabs {
  display: flex;
  padding: 16rpx 20rpx;
  gap: 10rpx;
  background: #fff;
}

.chat-tab {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 16rpx;
  border-radius: 0;
  background: none;
  font-size: 26rpx;
  color: #6B7280;
  border: 1px solid transparent;
}

.chat-tab.active {
  background: #F9FAFB;
  color: #111827;
  font-weight: 500;
  border-color: #111827;
}

/* 聊天列表 */
.chat-list {
  flex: 1;
  background: #fff;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  font-size: 22rpx;
  color: #9CA3AF;
  text-transform: uppercase;
  font-weight: 600;
}

.add-btn {
  padding: 8rpx;
  color: #111827;
}

.empty-hint {
  text-align: center;
  padding: 60rpx;
  color: #9CA3AF;
  font-size: 26rpx;
}

.chat-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  gap: 20rpx;
  transition: background-color 0.2s;
}

.chat-item:hover {
  background: #F9FAFB;
}

.chat-item.active {
  background: #F9FAFB;
  border-left: 6rpx solid #111827;
}

.item-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50% !important;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.item-avatar.group-type {
  background: #111827;
}

.item-avatar.friend-type {
  background: #F3F4F6;
  border-radius: 50% !important;
  overflow: hidden;
}

.item-info {
  flex: 1;
  min-width: 0;
}

.item-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #111827;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-desc {
  font-size: 22rpx;
  color: #9CA3AF;
  display: block;
  margin-top: 4rpx;
}

.chat-btn {
  padding: 16rpx;
  background: #F9FAFB;
  border-radius: 0;
  border: 1px solid #E5E7EB;
}

/* 好友申请 */
.pending-section {
  background: #FEF3C7;
  border-bottom: 1px solid #FCD34D;
}

.section-label {
  padding: 16rpx 30rpx;
  font-size: 24rpx;
  color: #92400E;
  font-weight: 600;
}

.pending-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 30rpx;
}

.pending-name {
  font-size: 28rpx;
  color: #111827;
}

.pending-actions {
  display: flex;
  gap: 16rpx;
}

.accept-btn, .reject-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.accept-btn {
  background: #10B981;
}

.reject-btn {
  background: #EF4444;
}

/* 聊天窗口 */
.chat-window {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  display: flex;
  flex-direction: column;
  z-index: 100;
}

.chat-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 30rpx;
  background: #fff;
  border-bottom: 1px solid #F3F4F6;
}

.back-btn {
  padding: 8rpx;
}

.chat-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.messages-container {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
  background: #F9FAFB;
}

.message-wrapper {
  display: flex;
  margin-bottom: 30rpx;
  gap: 16rpx;
  max-width: 70%;
}

.message-wrapper.self {
  flex-direction: row-reverse;
  margin-left: auto;
}

.message-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50% !important;
  overflow: hidden;
  background: #eee;
  flex-shrink: 0;
  border: 2rpx solid #E5E7EB;
}

.message-content {
  max-width: 100%;
}

.sender-name {
  font-size: 22rpx;
  color: #6B7280;
  margin-bottom: 8rpx;
  margin-left: 4rpx;
  display: block;
}

/* 消息气泡 - 直角工业极简 */
.message-bubble {
  background: #F3F4F6;
  padding: 18rpx 24rpx;
  border-radius: 0;
  box-shadow: none;
  border: 1px solid #E5E7EB;
}

.message-wrapper.self .message-bubble {
  background: #4B5563;
  color: #fff;
  border-radius: 0;
  border: none;
}

.msg-text {
  font-size: 28rpx;
  line-height: 1.5;
  display: block;
}

.msg-time {
  font-size: 20rpx;
  color: #9CA3AF;
  margin-top: 8rpx;
  display: block;
}

.message-wrapper.self .msg-time {
  color: rgba(255,255,255,0.7);
}

/* 输入区域 - 直角 */
.input-area {
  display: flex;
  gap: 16rpx;
  padding: 16rpx 30rpx;
  background: #fff;
  border-top: 1px solid #F3F4F6;
}

.message-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  background: #F3F4F6;
  border-radius: 0;
  border: 1px solid #E5E7EB;
  font-size: 28rpx;
}

.send-btn {
  width: 72rpx;
  height: 72rpx;
  background: #111827;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  margin: 0;
  padding: 0;
}

/* 帖子列表 */
.post-list {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 120rpx;
}

.filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background: #fff;
  margin-bottom: 16rpx;
  border-bottom: 1px solid #F3F4F6;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
}

.filter-select {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #fff;
  border: 1px solid #E5E7EB;
  border-radius: 0;
  font-size: 26rpx;
  color: #111827;
}

/* 帖子卡片 - 直角 */
.post-card {
  background: #fff;
  padding: 28rpx 30rpx;
  margin-bottom: 16rpx;
  border: 1px solid #F3F4F6;
  border-radius: 0;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.post-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50% !important;
  overflow: hidden;
  margin-right: 20rpx;
  background: #F3F4F6;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.time {
  font-size: 22rpx;
  color: #9CA3AF;
  margin-top: 4rpx;
}

.visibility-badge {
  padding: 8rpx 14rpx;
  border-radius: 0;
  font-size: 22rpx;
  font-weight: 500;
}

.visibility-badge.public {
  background: #DBEAFE;
  color: #1E40AF;
  border: 1px solid #93C5FD;
}

.visibility-badge.friends-only {
  background: #FEF3C7;
  color: #92400E;
  border: 1px solid #FCD34D;
}

.post-content {
  margin-bottom: 24rpx;
}

.content-text {
  font-size: 28rpx;
  color: #111827;
  line-height: 1.6;
  display: block;
  margin-bottom: 16rpx;
}

.post-media {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.media-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 0;
  background: #f0f0f0;
}

.media-image.single {
  width: 100%;
  max-width: 500rpx;
  height: 400rpx;
}

.post-footer {
  display: flex;
  border-top: 1px solid #F3F4F6;
  padding-top: 16rpx;
}

.footer-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 12rpx;
  border-radius: 0;
  font-size: 26rpx;
  color: #6B7280;
  background: transparent;
  border: none;
  margin: 0;
  line-height: 1.4;
}

.footer-btn.active {
  color: #EF4444;
}

/* 评论区 */
.comments-section {
  background: #F9FAFB;
  padding: 20rpx;
  margin-top: 16rpx;
  border-radius: 0;
  border: 1px solid #E5E7EB;
}

.comment-list {
  margin-bottom: 16rpx;
}

.comment-item {
  font-size: 26rpx;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.comment-user {
  font-weight: 600;
  color: #111827;
  margin-right: 10rpx;
}

.comment-content {
  color: #111827;
}

.comment-input-area {
  display: flex;
  gap: 12rpx;
}

.comment-input {
  flex: 1;
  height: 64rpx;
  padding: 0 20rpx;
  background: #fff;
  border: 1px solid #E5E7EB;
  border-radius: 0;
  font-size: 26rpx;
}

.comment-send-btn {
  padding: 0 24rpx;
  height: 64rpx;
  background: #111827;
  color: #fff;
  border: none;
  border-radius: 0;
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
}

/* 加载状态 */
.loading-more, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #9CA3AF;
  font-size: 26rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  color: #9CA3AF;
  font-size: 28rpx;
  gap: 20rpx;
}

/* 发布按钮 - 圆形白底黑字 */
.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 140rpx;
  width: 100rpx;
  height: 100rpx;
  background: #FFFFFF;
  border-radius: 50% !important;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15) !important;
  border: none;
  z-index: 50;
  transition: transform 0.2s;
}

.fab-btn:active {
  transform: scale(0.95);
  background: #F3F4F6;
}

/* 帖子发布弹窗 */
.visibility-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.visibility-option {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  border: 1px solid #E5E7EB;
  color: #6B7280;
  background: #F9FAFB;
  transition: all 0.2s;
}

.visibility-option.active {
  background: #111827;
  color: #fff;
  border-color: #111827;
}

/* 弹窗 - 直角 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 0;
  padding: 40rpx;
  border: 1px solid #E5E7EB;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  display: block;
  margin-bottom: 30rpx;
  text-align: center;
}

.modal-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #F3F4F6;
  border: 1px solid #E5E7EB;
  border-radius: 0;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.modal-textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx 24rpx;
  background: #F3F4F6;
  border: 1px solid #E5E7EB;
  border-radius: 0;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 80rpx;
  border-radius: 0;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  margin: 0;
}

.btn-cancel {
  background: #F3F4F6;
  color: #6B7280;
  border: 1px solid #E5E7EB;
}

.btn-confirm {
  background: #111827;
  color: #fff;
}