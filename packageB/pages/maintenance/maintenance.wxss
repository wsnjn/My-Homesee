/* pages/maintenance/maintenance.wxss */
page {
  background-color: #FFFFFF;
  color: #111827;
  padding-bottom: 40rpx;
}

.container {
  padding: 40rpx 32rpx;
}

/* Header */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 32rpx;
  border-bottom: 1px solid #E5E7EB;
  margin-bottom: 40rpx;
}

.title-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 800;
  text-transform: uppercase;
  color: #111827;
}

/* Request List */
.request-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.request-card {
  background: white;
  border: 1px solid #E5E7EB;
  padding: 32rpx;
  border-radius: 0;
  margin-bottom: 24rpx;
  transition: border-color 0.2s;
}

.empty-card {
  padding: 60rpx;
  text-align: center;
  color: #9CA3AF;
  border: 1px dashed #E5E7EB;
  border-radius: 0;
  font-size: 28rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.req-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.status-badge {
  font-size: 22rpx;
  font-weight: 700;
  padding: 6rpx 12rpx;
  text-transform: uppercase;
  border-radius: 0;
  border: 1px solid transparent;
}

.status-pending { color: #D97706; border-color: #D97706; background: #FFF7ED; }
.status-processing { color: #2563EB; border-color: #2563EB; background: #EFF6FF; }
.status-completed { color: #059669; border-color: #059669; background: #ECFDF5; }
.status-closed { color: #4B5563; border-color: #4B5563; background: #F3F4F6; }

.req-desc {
  color: #4B5563;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.req-meta {
  display: flex;
  gap: 32rpx;
  border-top: 1px solid #F3F4F6;
  padding-top: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
}

.meta-item .label {
  color: #6B7280;
  font-weight: 600;
}

.meta-item .value {
  color: #111827;
  font-family: monospace;
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  padding: 40rpx;
  width: 80%;
  border-radius: 0;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  border-bottom: 1px solid #E5E7EB;
  padding-bottom: 16rpx;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 800;
  color: #111827;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-group .label {
  display: block;
  font-size: 24rpx;
  color: #374151;
  font-weight: 700;
  margin-bottom: 8rpx;
  text-transform: uppercase;
}

.input, .textarea, .picker-value {
  width: 100%;
  border: 1px solid #E5E7EB;
  padding: 16rpx;
  font-size: 28rpx;
  color: #111827;
  background: #FFFFFF;
  box-sizing: border-box;
  border-radius: 0;
}

.textarea {
  height: 160rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 32rpx;
}

/* Buttons */
.btn-primary {
  background: #111827;
  color: #FFFFFF;
  border-radius: 0;
  font-size: 26rpx;
  font-weight: 600;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  border: none;
  margin: 0;
}

.btn-secondary {
  background: #FFFFFF;
  color: #111827;
  border: 1px solid #E5E7EB;
  border-radius: 0;
  font-size: 26rpx;
  font-weight: 600;
  padding: 16rpx 32rpx;
  margin: 0;
}

.btn-primary:active, .btn-secondary:active {
  opacity: 0.8;
}